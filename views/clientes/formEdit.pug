extends ../layout

block content
  h2 Edición del Cliente {{ cliente.nombre }}

  // FORMULARIO

  form(action='/clientes/update' method='POST')
    .form-group
      label Nombre
      input.form-control(type='text' name='nombre' value='{{ cliente.nombre }}')
    .form-group
      label Apellidos
      input.form-control(type='text' name='apellidos' value='{{ cliente.apellidos }}')
    .form-group
      label Dirección
      input.form-control(type='text' name='direccion' value='{{ cliente.direccion }}')
    .form-group
      label Email
      input.form-control(type='text' name='email' value='{{ cliente.email }}')
    .form-group
      label Edad
      input.form-control(type='number' name='edad' value='{{ cliente.edad }}')
    .form-group
      label Sexo
      input.form-control(type='text' name='sexo' value='{{ cliente.sexo }}')
    .form-group
      label Fecha de Inscripción
      input.form-control(type='text' name='fecha_nacimiento' value='{{ cliente.fecha_nacimiento }}')
    .form-group
      label Cuota
      input.form-control(type='text' name='cuota' value='{{ cliente.cuota }}')
    .form-group
      label Fecha de Nacimiento
      input.form-control(type='text' name='fecha_nacimiento' value='{{ cliente.fecha_nacimiento }}')
    .form-group
      label DNI
      input.form-control(type='text' name='dni' value='{{ cliente.dni }}')
    .form-group
      label Precio
      input.form-control(type='number' name='precio' value='{{ cliente.precio }}')
    
      
    input(type='hidden' name='clienteId' value='{{cliente.id}}')

    input.btn.btn-block.btn-primary(type='submit' value='Enviar')

  

